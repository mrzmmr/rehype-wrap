{
  "name": "rehype-wrap",
  "version": "1.0.4",
  "description": "wrap selected elements with a given element",
  "main": "index.js",
  "scripts": {
    "prepublish": "npm run build",
    "clean": "rimraf ./*.js coverage .nyc_output",
    "pretest": "npm run build",
    "lint": "xo --fix src/*.js",
    "tap": "tap -Rspec test.js",
    "build": "npm run lint && npm run babel",
    "report": "nyc report --reporter=text-lcov | coveralls",
    "babel": "babel src -d .",
    "test": "nyc npm run tap"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "xo": {
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrzmmr/rehype-wrap.git"
  },
  "keywords": [
    "rehype",
    "plugin",
    "wrap",
    "wrapper",
    "container"
  ],
  "author": "Paul Zimmer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrzmmr/rehype-wrap/issues"
  },
  "homepage": "https://github.com/mrzmmr/rehype-wrap#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.3.1",
    "nyc": "^11.3.0",
    "prettier": "^1.8.2",
    "rehype": "^5.0.0",
    "rehype-stringify": "^3.0.0",
    "remark-parse": "^4.0.0",
    "remark-rehype": "^2.0.1",
    "rimraf": "^2.6.2",
    "tap": "^10.7.3",
    "unified": "^6.1.6",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "hast-util-parse-selector": "^2.1.0",
    "hast-util-select": "^1.0.1",
    "unist-util-visit": "^1.2.0"
  }
}
