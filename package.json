{
  "name": "rehype-wrap",
  "version": "1.0.5",
  "description": "wrap selected elements with a given element",
  "main": "index.js",
  "engines": {
    "node": ">=8.0"
  },
  "scripts": {
    "clean": "rimraf ./*.js coverage .nyc_output",
    "lint": "prettier --write \"src/*.js\" && xo --fix",
    "build": "babel src -d .",
    "test": "npm run lint && npm run build && nyc tap -Rspec test.js",
    "posttest": "nyc report --reporter=text-lcov | coveralls"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "parser": "babylon"
  },
  "xo": {
    "prettier": true,
    "ignores": [
      "./*.js",
      "src/test.js"
    ]
  },
  "keywords": [
    "rehype",
    "plugin",
    "wrap",
    "wrapper",
    "container"
  ],
  "author": "Paul Zimmer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrzmmr/rehype-wrap/issues"
  },
  "homepage": "https://github.com/mrzmmr/rehype-wrap#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.3",
    "eslint-config-prettier": "^2.10.0",
    "eslint-plugin-prettier": "^2.7.0",
    "nyc": "^14.1.1",
    "prettier": "^1.17.1",
    "rehype": "^5.0.1",
    "rehype-stringify": "^3.0.0",
    "remark-parse": "^4.0.0",
    "remark-rehype": "^2.0.1",
    "rimraf": "^2.6.3",
    "tap": "^14.2.1",
    "unified": "^6.2.0",
    "xo": "^0.23.0"
  },
  "dependencies": {
    "hast-util-parse-selector": "^2.1.0",
    "hast-util-select": "^1.0.1",
    "unist-util-visit": "^1.2.0"
  }
}
